<?xml version="1.0" encoding="utf-8"?>
<!-- week_selector.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/week_selector"
    android:padding="16dp">

    <!-- Week Navigation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageButton
            android:id="@+id/btnPrevWeekD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/baseline_arrow_back_ios_24" />

        <TextView
            android:id="@+id/tvWeekRange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/this_week"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:padding="16dp"
            android:textColor="@android:color/black" />

        <ImageButton
            android:id="@+id/btnNextWeekD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/baseline_arrow_forward_ios_24" />
    </LinearLayout>

    <!-- Days of the Week -->
    <LinearLayout
        android:id="@+id/llDaysOfWeek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Example for one day button -->
        <Button
            android:id="@+id/btnDay1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="@string/m"
            android:textColor="@android:color/black"
            android:background="@drawable/selector_day_button"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:padding="0dp"
            android:layout_margin="2dp" />
        <!-- Example for one day button -->
        <Button
            android:id="@+id/btnDay2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="@string/t"
            android:textColor="@android:color/black"
            android:background="@drawable/selector_day_button"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:padding="0dp"
            android:layout_margin="2dp" />
        <!-- Example for one day button -->
        <Button
            android:id="@+id/btnDay3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="@string/w"
            android:textColor="@android:color/black"
            android:background="@drawable/selector_day_button"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:padding="0dp"
            android:layout_margin="2dp" />
        <!-- Example for one day button -->
        <Button
            android:id="@+id/btnDay4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="@string/tu"
            android:textColor="@android:color/black"
            android:background="@drawable/selector_day_button"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:padding="0dp"
            android:layout_margin="2dp" />
        <!-- Example for one day button -->
        <Button
            android:id="@+id/btnDay5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="@string/f"
            android:textColor="@android:color/black"
            android:background="@drawable/selector_day_button"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:padding="0dp"
            android:layout_margin="2dp" />
        <!-- Example for one day button -->
        <Button
            android:id="@+id/btnDay6"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="@string/s"
            android:textColor="@android:color/black"
            android:background="@drawable/selector_day_button"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:padding="0dp"
            android:layout_margin="2dp" />
        <!-- Example for one day button -->
        <Button
            android:id="@+id/btnDay7"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="@string/su"
            android:textColor="@android:color/black"
            android:background="@drawable/selector_day_button"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:padding="0dp"
            android:layout_margin="2dp" />

        <!-- Repeat the above Button for the rest of the days (T, W, T, F, S, S) -->

    </LinearLayout>
</LinearLayout>
